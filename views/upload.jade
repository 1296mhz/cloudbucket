extends layout

block content
  include _header
  #wrapper
    #scroller
      .container
        form#uploadForm(role='form', method='post', action='/upload', enctype='multipart/form-data')
          .form-group
            label.heavy(for='userFile') File
            input#userFile.form-control(type='file', name='userFile')
          .form-group
            label.heavy(for='exampleInputEmail1') Tags
            input.form-control(name='tags', id='tags')
            input#uploadDevice(type='text', style='display: none;')

          button.ladda-button(data-style='expand-right', data-color='mint', type='submit')
            span.ladda-label Upload
  include _footer
  #message(data-message='#{message}', hidden)