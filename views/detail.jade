extends layout

block content
  include _header
  .container
    if file.extension == 'txt'
      h3 Category
      p #{file.category}

      h3 Summary
      p= file.summary

      h3 Entities
      for entity in file.entities
        span
          strong #{entity.text} -
          | #{entity.type} &nbsp;

      h3 Concept Tags
      for concept in file.concepts
        span #{concept.text} &nbsp;

      h4 Keyword Tags
      div(style='max-width:100%')
        for keyword in file.keywords
          span.label.label-primary #{keyword.text}
          | &nbsp;

    else if file.extension == 'mp3'
      h1 Audio File
