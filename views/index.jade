extends layout

block content
  if !user
    .container
      .page-header
        h1 Welcome to CloudBucket
          br
          small Online cloud storage with semantic search capability.
      br
      a.btn.btn-primary.btn-lg.btn-block(href='/auth/google', data-ignore='push') Login with Google
  else
    include _header
    .container
      form(action='/search', method='post')
        .input-group
          input.form-control(type='text', name='searchValue' placeholder='Search by name or keywords')
          span.input-group-btn
            button.btn.btn-primary(type='submit') Search
      br
      
    if files.length < 1
      h3.text-center You do not have any files yet
    else
      table.table.table-hover
        tbody
          for file in files
            tr
              td(id='#{file.path}')
                a(href='/files/#{file.path}')
                  span.glyphicon.glyphicon-file
                  |  #{file.name}
                  br
                  span.text-muted Size: #{file.friendlySize}
          