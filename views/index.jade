extends layout

block content
  include _header
  #wrapper
    #scroller.has-icon
      if !files
        h4.heavy.text-center.fadeInLeft.animated You do not have any files yet
      else if (files && files.length == 0)
        h4.heavy.text-center.fadeInLeft.animated Search results returned nothing
      else
        ul.arrowed
          for file in files
            li(class='icontype-#{file.extension}', data-id='#{file.id}')
              .inner
                .heavy
                  a.elipsis(href='/files/#{file.id}') #{file.name}
                .light Size: #{file.friendlySize}
