extends layout

block content
  if !user
    .container
      .page-header
        h1 Welcome to CloudBucket
          br
          small Online cloud storage with semantic search capability.
      br
      a.btn.btn-primary.btn-lg.btn-block(href='/auth/google', data-ignore='push') Login with Google
  else
    include _header
    .container
      .input-group
        input.form-control(type='text')
        span.input-group-btn
          button.btn.btn-primary(type='button') Search
      br
      
    if files.length < 1
      h3.text-center You do not have any files yet
    else
      table.table.table-hover
        tbody
          for file in files
            tr
              td(id='#{file.path}')
                a(href='/files/#{file.path}')
                  span.glyphicon.glyphicon-file
                  |  #{file.name}
          