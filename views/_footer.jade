script
  // Refactor later. Hard dependency on HTML structure and URL path.
  $(function() {

    function updateActiveTab() {
      var route = window.location.pathname
      if (route === '/') {
        $('#filesTab').addClass('active');
      } else if (route === '/search') {
        $('#searchTab').addClass('active');
      } else if (route === '/account') {
        $('#settingsTab').addClass('active');
      }
    }

    // Update active tab when transitioning between the app tabs
    window.addEventListener('push', function() {
     updateActiveTab();
    });

    // Set active tab initially on DOM load
    updateActiveTab();

  });

nav.bar-tab
